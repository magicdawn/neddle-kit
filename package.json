{
  "name": "needle-kit",
  "version": "3.0.0",
  "description": "Arya's needle, little but powerful.",
  "type": "module",
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "test": "vitest run",
    "prepare": "husky install",
    "test:dev": "vitest",
    "test-cover": "vitest run --coverage",
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/needle-kit.git"
  },
  "keywords": [
    "needle",
    "kit"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/needle-kit/issues"
  },
  "homepage": "https://github.com/magicdawn/needle-kit",
  "dependencies": {
    "@humanfs/node": "^0.14.1",
    "fs-extra": "^11.2.0",
    "untildify": "^5.0.0"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.0.3",
    "@swc/core": "^1.4.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
